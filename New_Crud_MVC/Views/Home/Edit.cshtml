@model New_Crud_MVC.Models.Employee
@{
    ViewBag.Title = "Edit";
}

<div class="row">
    <div class="col-6 offset-3">
        <div class="card">
            <div class="card-header">
                <h4>Edit</h4>
            </div>
            <div class="card-body">
                @using (Html.BeginForm("Edit", "Home", FormMethod.Post))
                {
                    <div class="form-group">
                        <input type="hidden" name="Id" value="@Model.Id"/>
                    </div>
                        <div class="form-group">
                            <label>Student Name</label>
                            <input type="text" class="form-control" name="Name" value="@Model.Name" />
                        </div>
                        <div class="form-group">
                            <label>Student Address</label> 
                            <input type="text" class="form-control" name="Address"  value="@Model.Address"/>
                        </div>
                        <div class="form-group">
                            <label>Student Salary</label>
                            <input type="number" class="form-control" name="Salary" value="@Model.Salary" />
                        </div>

                        <div class="form-group">
                            <label>Student Gender</label>
                            <select class="form-control" name="Gender" value="@Model.Gender">
                                <option value="">Select</option>
                                <option value="Male">Male</option>
                                <option value="Female">Female</option>
                            </select>
                        </div>

                        <div class="form-group">
                            <label>Student Department</label>
                            <input type="text" class="form-control" name="Department" value="@Model.Department"/>
                        </div>

                        <div class="mr-3">
                            <input type="submit" class="btn btn-primary" value="Submit" />
                            <input type="reset" class="btn btn-primary" value="Reset" />
                        </div>
                        }

                    </div>

                </div>
    </div>
</div>